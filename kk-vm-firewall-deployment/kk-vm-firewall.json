{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "prefix": {
            "type": "string"
        },

        "vmName": {
            "type": "string"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "secureString"
        },
        "vmSize": {
            "type": "string"
        },

        "imagePublisher": {
            "type": "string"
        },
        "imageOffer": {
            "type": "string"
        },
        "imageSku": {
            "type": "string"
        },


        "backupRg": {
            "type": "string"
        },
        "backupVault": {
            "type": "string"
        },
        

        "vnetRg": {
            "type": "string"
        },
        "vnetName": {
            "type": "string"
        },
        "vnetPrefix": {
            "type": "string"
        },
        "wanName": {
            "type": "string"
        },
        "wanPrefix": {
            "type": "string"
        },
        "lanName": {
            "type": "string"
        },
        "lanPrefix": {
            "type": "string"
        },

        "pipDnsName": {
            "type": "string"
        },






        "disktype": {
            "type": "string",
            "defaultValue": "Premium_LRS"
        }
        
        
        
    },
    "variables": {
        "policyName": "[concat(parameters('prefix'),'-daily-backup-VM')]",
        "vmrgname": "[concat(parameters('vmName'),'-rg')]"
    },
    "resources": [
        {
            "name": "[variables('vmrgname')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2021-04-01",
            "location": "[parameters('location')]"
        },
        {
            "name": "VmFirewallDeployment",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[variables('vmrgname')]",
            "apiVersion": "2021-04-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups', concat(parameters('vmName'),'-rg'))]"
            ],
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "mode": "Incremental",
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "prefix": {
                        "value": "[parameters('prefix')]"
                    },
                    "vmName": {
                        "value": "[parameters('vmName')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "disktype": {
                        "value": "[parameters('disktype')]"
                    },
                    "imagePublisher": {
                        "value": "[parameters('imagePublisher')]"
                    },
                    "imageOffer": {
                        "value": "[parameters('imageOffer')]"
                    },
                    "imageSku": {
                        "value": "[parameters('imageSku')]"
                    },
                    "vmSize": {
                        "value": "[parameters('vmSize')]"
                    }
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "location": {
                            "type": "string"
                        },
                        "prefix": {
                            "type": "string"
                        },
                        "vmName": {
                            "type": "string"
                        },
                        "adminUsername": {
                            "type": "string"
                        },
                        "adminPassword": {
                            "type": "secureString"
                        },
                        "disktype": {
                            "type": "string",
                            "defaultValue": "Premium_LRS"
                        },
                        "imageSku": {
                            "type": "string"
                        },
                        "imagePublisher": {
                            "type": "string"
                        },
                        "imageOffer": {
                            "type": "string"
                        },
                        "vmSize": {
                            "type": "string"
                        }
                    },
                    "variables": {
                        "vnetrg": "[concat(parameters('prefix'),'-vnet-rg')]",
                        "vnet": "[concat(parameters('prefix'),'-vnet')]",
                        "subnet": "[concat(parameters('prefix'),'-lan-subnet')]",
                        "vnetId": "[concat('/subscriptions/', subscription().subscriptionId , '/resourceGroups/' , variables('vnetrg'), '/providers/Microsoft.Network/virtualNetworks/', variables('vnet'))]",
                        "subnetRef": "[concat(variables('vnetId'), '/subnets/', variables('subnet'))]",
                        "nsgname": "[concat(parameters('vmName'),'-nsg')]"
                    },
                    "resources": [
                        {
                            "name": "[variables('nsgname')]",
                            "type": "Microsoft.Network/networkSecurityGroups",
                            "apiVersion": "2020-11-01",
                            "location": "[parameters('location')]",
                            "properties": {}
                        },
                        {
                            "name": "[parameters('vmName')]",
                            "type": "Microsoft.Network/networkInterfaces",
                            "apiVersion": "2018-10-01",
                            "location": "[parameters('location')]",
                            "dependsOn": [
                                "[resourceId('Microsoft.Network/networkSecurityGroups',variables('nsgname'))]"
                            ],
                            "properties": {
                                "networkSecurityGroup": {
                                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups',variables('nsgname'))]"
                                },
                                "ipConfigurations": [
                                    {
                                        "name": "ipconfig1",
                                        "properties": {
                                            "subnet": {
                                                "id": "[variables('subnetRef')]"
                                            },
                                            "privateIPAllocationMethod": "Dynamic"
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "name": "[parameters('vmName')]",
                            "type": "Microsoft.Compute/virtualMachines",
                            "apiVersion": "2022-03-01",
                            "location": "[parameters('location')]",
                            "dependsOn": [
                                "[concat('Microsoft.Network/networkInterfaces/', parameters('vmName'))]"
                            ],
                            "properties": {
                                "hardwareProfile": {
                                    "vmSize": "[parameters('vmSize')]"
                                },
                                "storageProfile": {
                                    "osDisk": {
                                        "createOption": "fromImage",
                                        "name": "[concat(parameters('vmName'),'-OsDisk')]",
                                        "managedDisk": {
                                            "storageAccountType": "[parameters('DiskType')]"
                                        }
                                    },
                                    "imageReference": {
                                        "publisher": "[parameters('imagePublisher')]",
                                        "offer": "[parameters('imageOffer')]",
                                        "sku": "[parameters('imageSku')]",
                                        "version": "latest"
                                    }
                                },
                                "networkProfile": {
                                    "networkInterfaces": [
                                        {
                                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('vmName'))]"
                                        }
                                    ]
                                },
                                "osProfile": {
                                    "computerName": "[parameters('vmName')]",
                                    "adminUsername": "[parameters('adminUsername')]",
                                    "adminPassword": "[parameters('adminPassword')]",
                                    "linuxConfiguration": {
                                        "patchSettings": {
                                            "patchMode": "ImageDefault"
                                        }
                                    }
                                }
                            },
                            "plan": {
                                "name": "[parameters('imageSku')]",
                                "publisher": "[parameters('imagePublisher')]",
                                "product": "[parameters('imageOffer')]"
                            },
                            "resources": []
                        }
                    ],
                    "outputs": {}
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "[concat('BackupDeployment-',parameters('vmName'))]",
            "resourceGroup": "[parameters('backupRg')]",
            "dependsOn": [
                "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',variables('vmrgname'),'/providers/Microsoft.Resources/deployments/VmFirewallDeployment')]"
            ],
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "mode": "Incremental",
                "parameters": {
                    "vmName": {
                        "value": "[parameters('vmName')]"
                    },
                    "vmrg": {
                        "value": "[variables('vmrgname')]"
                    },
                    "backupVault": {
                        "value": "[parameters('backupVault')]"
                    },
                    "policyName": {
                        "value": "[variables('policyName')]"
                    }
                },

                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "backupVault": {
                            "type": "String"
                        },
                        "policyName": {
                            "type": "String"
                        },
                        "vmName": {
                            "type": "string"
                        },
                        "vmrg": {
                            "type": "string"
                        }
                    },
                    "variables": {
                        "ProtectedItem": "[concat('vm;iaasvmcontainerv2;',parameters('vmrg'),';',parameters('vmName'))]",
                        "ProtectionContainer": "[concat('IaasVMContainer;iaasvmcontainerv2;',parameters('vmrg'),';',parameters('vmName'))]",
                        "sourceResourceId": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('vmrg'),'/providers/Microsoft.Compute/virtualMachines/',parameters('vmName'))]"
                    },
                    "resources": [
                        {
                            "type": "Microsoft.RecoveryServices/vaults/backupFabrics/protectionContainers/protectedItems",
                            "apiVersion": "2016-06-01",
                            "name": "[concat(parameters('backupVault'), '/Azure/',variables('protectionContainer'), '/', variables('ProtectedItem'))]",
                            "properties": {
                                "protectedItemType": "Microsoft.ClassicCompute/virtualMachines",
                                "policyId": "[resourceId('Microsoft.RecoveryServices/vaults/backupPolicies', parameters('backupVault'), parameters('policyName'))]",
                                "sourceResourceId": "[variables('sourceResourceId')]"
                            }
                        }
                    ]
                }
            }
        }
    ]
}
