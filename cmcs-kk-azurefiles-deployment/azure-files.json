{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "germanywestcentral"
        },
        "storageAccountName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 15
        },
        "storageAccountSKU": {
            "type": "string",
            "allowedValues": [
                "Premium_LRS",
                "Premium_GRS"
            ],
            "defaultValue": "Premium_LRS"
        },
        "fileShareName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 63
        },
        "quota": {
            "type": "int"
        },
        "vnetRg": {
            "type": "string"
        },
        "vnet": {
            "type": "string"
        },
        "subnet": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[parameters('storageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-04-01",
            "location": "[parameters('location')]",
            "kind": "FileStorage",
            "sku": {
                "name": "[parameters('storageAccountSKU')]",
                "tier": "Premium"
            },
            "properties": {
                "networkAcls": {
                    "bypass": "AzureServices",
                    "defaultAction": "Deny",
                    "virtualNetworkRules": [
                        {
                            "id": "[concat(subscription().id,'/resourceGroups/',parameters('vnetRg'),'/providers/Microsoft.Network/virtualNetworks/',parameters('vnet'),'/subnets/',parameters('subnet'))]"
                        }
                    ]


                }
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
            "apiVersion": "2021-04-01",
            "name": "[concat(parameters('storageAccountName'), '/default/', parameters('fileShareName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
            ],
            "properties": {
                "shareQuota": "[parameters('quota')]"
            }
        }
    ],
    "outputs": {}
}